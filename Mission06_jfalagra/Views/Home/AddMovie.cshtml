
@{
    ViewData["Title"] = "Add Movie";
}


@model AddMovieModel;
<h1>Add Movie</h1>



<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="MovieId" type="hidden" />
    <label> Category:</label>
    <select asp-for="CategoryID">
        <option value="">Select a Category</option>
        @foreach (Genre g in ViewBag.Genre)
            {
                <option value=" @g.CategoryID">@g.CategoryName</option>
            }
    </select> <br />
    <label> Title:</label>
    <input type="text" asp-for="Title" name="title"> <br />
    <label> Year:</label>
    <input type="text" asp-for="Year" name="year"> <br />
    <label> Director:</label>
    <input type="text" asp-for="Director" name="director"> <br />
    <label> Rating:</label>
    <select type="text" asp-for="Rating" name="rating">
        <option value="g">G</option>
        <option value="pg">PG</option>
        <option value="13">PG-13</option>
        <option value="r">R</option>
    </select><br />
    <label> Edited:</label>
    <select type="text" asp-for="Edited" name="edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select> <br />
    <label> Lent To:</label>
    <input type="text" asp-for="Lent_To" name="lent_to"> <br />
    <label> Noted:</label>
    <input type="text" maxlength="25" asp-for="Notes" name="notes"> <br />
    <br />
    <br />
    <button type="submit">Submit</button>    
    <!--Displays the necessary error when numbers are not validated-->
    <div asp-validation-summary="All"></div>
</form>