@*
ViewData["Title"] = "Wait List"
*@
@model List<AddMovieModel>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>

            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent_To</td>
            <td>Notes</td>
            <td>Category</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>

            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent_To</td>
            <td>@x.Notes</td>
            <td>@x.Genres.CategoryName</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-categoryid="@x.CategoryID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-categoryid="@x.CategoryID">Delete</a></td>
        </tr>
            }
    </tbody>
</table>